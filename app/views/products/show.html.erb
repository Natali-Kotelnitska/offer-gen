<h1 class="text-center text-primary">Опис товару</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <% if @scraped_data %>
      <div class="card shadow mb-5">
        <%= image_tag(@scraped_data[:image], class: "card-img-top", width: 450, height: 450) %>
          <div class="card-body">
            <h5 class="card-title"><%= @scraped_data[:title] %></h5>
            <p class="card-text"><%= @scraped_data[:description] %></p>
            <p class="card-text">
              Ціна: <%= "#{@scraped_data[:price_range].first.round(2)} - #{@scraped_data[:price_range].last.round(2)}" %> грн.
            </p>
            <p class="card-text">Мінімальна кількість замовлення: <%= @scraped_data[:min_amount] %></p>
            <% if @scraped_data[:colors].present? %>
              <h3>Товар доступний в моделях:</h3>
              <ul>
                <% @scraped_data[:colors].each do |color| %>
                   <li class="text-lowercase"><%= color %></li>
                <% end %>
              </ul>
            <% end %>

            <% if @scraped_data[:specifications].present? %>
              <h3>Специфікація:</h3>
              <ul>
                <% @scraped_data[:specifications].each do |specification| %>
                  <li><%= specification %></li>
                <% end %>
               </ul>
            <% end %>
          </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
