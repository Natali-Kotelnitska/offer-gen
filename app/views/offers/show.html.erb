<h1><%= @offer.title %></h1>

<p>
  <strong>Description:</strong>
  <%= @offer.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @offer.price %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @offer.rating %>
</p>

<h2>Images</h2>
<% @offer.images.each do |image| %>
  <img src="<%= image %>" alt="Image">
<% end %>

<h2>Options</h2>
<% @offer.options.each do |option| %>
  <div>
    <img src="<%= option[:image] %>" alt="Option image">
    <p><%= option[:name] %></p>
  </div>
<% end %>
